(c)
mad <- mean(abs(x - mean(x)))
x_zscore_mad <- (x - mean(x)) / mad
x_zscore_mad

output:[1] -1.323724 -0.611862  0.000000  0.611862  1.323724

(d)
d <- ceiling(log10(max(abs(x))))
x_decimal_scaled <- x / 10^d
x_decimal_scaled

