(A)
x <- c(200, 300, 400, 600, 1000)
x_normalized <- (x - min(x)) / (max(x) - min(x))
x_normalized

output:0.000000 0.200000 0.400000 0.600000 1.000000

(b)
x_zscore <- scale(x)
x_zscore

